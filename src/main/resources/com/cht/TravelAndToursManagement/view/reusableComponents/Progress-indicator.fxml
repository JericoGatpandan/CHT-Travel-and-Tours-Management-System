<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Progress Indicator Section -->
<?import javafx.scene.shape.Circle?>
<VBox prefHeight="120" spacing="16" style="-fx-padding: 32 32 16 32;">
    <!-- Progress Line with Steps -->
    <HBox alignment="CENTER" spacing="0">
        <!-- Step 1: Customer -->
        <VBox alignment="CENTER" spacing="8" HBox.hgrow="ALWAYS">
            <StackPane prefHeight="44" prefWidth="44">
                <Circle fill="#007bff" radius="22" stroke="#007bff" strokeWidth="2" />
                <Label style="-fx-font-family: 'Inter'; -fx-font-size:  16; -fx-font-weight:  bold; -fx-text-fill: white;" text="1" />
            </StackPane>
            <Label style="-fx-font-family: 'Inter'; -fx-font-size: 12; -fx-text-fill:  #2C3E50;" text="Customer" />
        </VBox>

        <!-- Progress Line 1 -->
        <VBox alignment="CENTER" prefWidth="80" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-family: 'Inter'; -fx-text-fill: #E0E0E0; -fx-font-size: 10;" text="━━━━━━━━━━" />
        </VBox>

        <!-- Step 2: Package -->
        <VBox alignment="CENTER" spacing="8" HBox.hgrow="ALWAYS">
            <StackPane prefHeight="44" prefWidth="44">
                <Circle fill="#E0E0E0" radius="22" stroke="#E0E0E0" strokeWidth="2" />
                <Label style="-fx-font-family: 'Inter'; -fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: white;" text="2" />
            </StackPane>
            <Label style="-fx-font-family: 'Inter'; -fx-font-size: 12; -fx-text-fill: #7F8C8D;" text="Package" />
        </VBox>

        <!-- Progress Line 2 -->
        <VBox alignment="CENTER" prefWidth="80" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-family: 'Inter'; -fx-text-fill: #E0E0E0; -fx-font-size: 10;" text="━━━━━━━━━━" />
        </VBox>

        <!-- Step 3: Travel Details -->
        <VBox alignment="CENTER" spacing="8" HBox.hgrow="ALWAYS">
            <StackPane prefHeight="44" prefWidth="44">
                <Circle fill="#E0E0E0" radius="22" stroke="#E0E0E0" strokeWidth="2" />
                <Label style="-fx-font-family:  'Inter'; -fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: white;" text="3" />
            </StackPane>
            <Label style="-fx-font-family: 'Inter'; -fx-font-size: 12; -fx-text-fill: #7F8C8D;" text="Travel Details" />
        </VBox>

        <!-- Progress Line 3 -->
        <VBox alignment="CENTER" prefWidth="80" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-family: 'Inter'; -fx-text-fill: #E0E0E0; -fx-font-size: 10;" text="━━━━━━━━━━" />
        </VBox>

        <!-- Step 4: Payment -->
        <VBox alignment="CENTER" spacing="8" HBox.hgrow="ALWAYS">
            <StackPane prefHeight="44" prefWidth="44">
                <Circle fill="#E0E0E0" radius="22" stroke="#E0E0E0" strokeWidth="2" />
                <Label style="-fx-font-family:  'Inter'; -fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: white;" text="4" />
            </StackPane>
            <Label style="-fx-font-family: 'Inter'; -fx-font-size: 12; -fx-text-fill: #7F8C8D;" text="Payment" />
        </VBox>

        <!-- Progress Line 4 -->
        <VBox alignment="CENTER" prefWidth="80" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-family: 'Inter'; -fx-text-fill: #E0E0E0; -fx-font-size: 10;" text="━━━━━━━━━━" />
        </VBox>

        <!-- Step 5:  Confirm -->
        <VBox alignment="CENTER" spacing="8" HBox.hgrow="ALWAYS">
            <StackPane prefHeight="44" prefWidth="44">
                <Circle fill="#E0E0E0" radius="22" stroke="#E0E0E0" strokeWidth="2" />
                <Label style="-fx-font-family:  'Inter'; -fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: white;" text="5" />
            </StackPane>
            <Label style="-fx-font-family: 'Inter'; -fx-font-size: 12; -fx-text-fill: #7F8C8D;" text="Confirm" />
        </VBox>
    </HBox>
</VBox>
